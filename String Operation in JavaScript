<!DOCTYPE html>
<html lang="en">
<head>
    <title>String Operation</title>
    <b>
        <u><h1 align="center">String Operation in JavaScript</h1></u>
        <script>

            var my_string1 = "This is our third practical of JavaScript - CSS "
            var my_string2 = "We are going to implement the String Operation on our Strings"

            document.write("<br><hr><br>")

            document.write("Our 1st String is : "+my_string1+"<br><br>")
            document.write("Our 2nd String is : "+my_string2+"<br><br>")

            document.write("<hr><br>")

            /* String Concatination */

            document.write("String Concatination  |  Here we concated our 1st string and 2nd String !<br><br>")
            var str1 = my_string1.concat(my_string2)
            document.write(str1)

            document.write("<br><br><hr><br>")

            /* String Upper Case */

            document.write("Here we used upper Case Method to conver our first string in Upper case formate !<br><br>")
            document.write('Our Real String is : '+my_string1+"<br>")
            document.write("After Applying toUppercase() method<br><br>")
            var str2 = my_string1.toUpperCase()
            document.write("OutPut is : "+str2)

            document.write("<br><br><hr><br>")

            /* String Lower Case */

            document.write("Here we used Lower Case Method to conver our second string in Lower case formate !<br><br>")
            document.write('Our Real String is : '+my_string2+"<br>")
            document.write("After Applying toLowercase() method<br><br>")
            var str3 = my_string2.toLowerCase()
            document.write("OutPut is : "+str3)

        </script>
    </b>
